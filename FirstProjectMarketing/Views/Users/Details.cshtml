                    <div class="col-6">
                        <div class="input-group">
                            <label class="label" asp-for="Username"></label>
                            <input class="input--style-4" type="text" asp-for="Username" readonly="readonly">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label" asp-for="Phone"></label>
                            <input class="input--style-4" type="text" asp-for="Phone" readonly="readonly">
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label" asp-for="Country"></label>
                            <input class="input--style-4" type="text" asp-for="Country" readonly="readonly">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label" asp-for="City"></label>
                            <input class="input--style-4" type="text" asp-for="City" readonly="readonly">
                        </div>
                    </div>
                    <div class="col-4">
                        <div class="input-group">
                            <label class="label" asp-for="Street"></label>
                            <input class="input--style-4" type="text" asp-for="Street" readonly="readonly">
                        </div>
                    </div>
                </div>
                <div class="input-group">
                    <div class="rs-select2 js-select-simple select--no-search">
                        <img class="rounded-circle" width="150px" src="~/Images/@Model.Image" alt="No Image Found" />
                    </div>
                </div>
                <div class="p-t-15">
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
