<div class="page-wrapper p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <h2 class="card-header" style="text-align:center; background-color:#5350a2ad; margin:-1px; color:whitesmoke">Delete Store </h2>
            <div class="card-body">
                <form asp-action="Delete">
                    <input type="hidden" asp-for="StoreId" />
                    <div class="form-group">
                        <label asp-for="StoreName" class="control-label"></label>
                        <input asp-for="StoreName" class="input--style-4" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label asp-for="StoreDiscription" class="control-label"></label>
                        <input asp-for="StoreDiscription" class="input--style-4" readonly="readonly" />
                    </div>
                    <div class="form-group">
                        <label asp-for="StoreFloorNumber" class="control-label"></label>
                        <input asp-for="StoreFloorNumber" class="input--style-4" readonly="readonly" />
                    </div>
                    <div class="form-group" style="text-align:center">
                        <input type="submit" value="Delete" class="btn btn-outline-primary col-4" style="border-radius:25px" />
                    </div>
                </form>
                <div class="p-t-15">
                    <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Jquery JS-->
<script src="~/assetsCreatePage/vendor/jquery/jquery.min.js"></script>
<!-- Vendor JS-->
