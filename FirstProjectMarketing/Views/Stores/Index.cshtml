@model IEnumerable<FirstProjectMarketing.Models.Firststore>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

 <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

 <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<link href="~/css/site.css" rel="stylesheet" />



@*<p>
    <a asp-action="Create">Create New</a>
</p>*@

<div class="container-fluid">
<div class="card">
              <!-- /.card-header -->

              <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h2 class="m-0 font-weight-bold text-primary">All Stores</h2>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th> Name</th>
                    <th>Discription</th>
                    <th>Floor Number</th>
                    <th>Details | Edit | Delete</th>
                </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                     {
                         <tr>
                    <td>@item.StoreName</td>
                    <td>@item.StoreDiscription</td>
                    <td>@item.StoreFloorNumber</td>
                    <td>
                        <a class="btn btn-info btn-sm rounded-10" asp-action="Details" asp-route-id="@item.StoreId" data-toggle="tooltip" data-placement="top" title="Edit" style="width:30px">
                            <i class="fa fa-info"></i>
                        </a>

                        <a class="btn btn-success btn-sm rounded-10"   asp-action="Edit" asp-route-id="@item.StoreId" data-toggle="tooltip" data-placement="top" title="Edit" style="width:30px">
                            <i class="fa fa-edit"></i>
                        </a>

                         <a class="btn btn-danger btn-sm rounded-10"  asp-action="Delete" asp-route-id="@item.StoreId" data-toggle="tooltip" data-placement="top" title="Delete" style="width:30px">
                             <i class="fa fa-trash"></i>
                         </a>
                    </td>
                  </tr>
                     }
                  </tbody>
                  @*<tfoot>
                  <tr>
                    <th>Rendering engine</th>
                    <th>Browser</th>
                    <th>Platform(s)</th>
                    <th>Engine version</th>
                    <th>CSS grade</th>
                  </tr>
                  </tfoot>*@
                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
      </div>
      </div>
      </div>





         <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

 <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

