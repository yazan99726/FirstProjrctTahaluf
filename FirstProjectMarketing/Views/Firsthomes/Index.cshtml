@model IEnumerable<FirstProjectMarketing.Models.Firsthome>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js"></script>
<link href="~/Content/bootstrap.css" rel="stylesheet" />

 <link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />

 <script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<link href="~/css/site.css" rel="stylesheet" />



<div class="container-fluid">
        <p>
    <a  class="btn btn-outline-primary" style="border-radius:20px" asp-action="Create">Create New</a>
</p>
<div class="card">
              <!-- /.card-header -->

              <!-- DataTales Example -->
                    <div class="card shadow mb-4">
                        <div class="card-header py-3">
                            <h2 class="m-0 font-weight-bold text-primary">Home</h2>
                        </div>
                        <div class="card-body">
                            <div class="table-responsive">
                <table id="example1" class="table table-bordered table-striped">
                  <thead>
                  <tr>
                    <th>Logo</th>
                    <th>Project Name</th>
                    <th>Discription</th>
                    <th>Details | Edit | Delete</th>
                </tr>
                  </thead>
                  <tbody>
                      @foreach (var item in Model)
                     {
                         <tr>
                             <td>
                                <img class="rounded-circle" width="75px" height="75px" src="~/Images/imgHome/@item.Logo" alt="No Image Found" />
                             </td>
                             <td>@item.Projectname</td>
                             <td>@item.Discription</td>
                             
                    
                    <td>
                        <a class="btn btn-info btn-sm rounded-10" asp-action="Details" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Details" style="width:28%">
                            <i class="fa fa-info"></i>
                        </a>

                        <a class="btn btn-success btn-sm rounded-10"   asp-action="Edit" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Edit" style="width:28%">
                            <i class="fa fa-edit"></i>
                        </a>

                         <a class="btn btn-danger btn-sm rounded-10"  asp-action="Delete" asp-route-id="@item.Id" data-toggle="tooltip" data-placement="top" title="Delete" style="width:28%">
                             <i class="fa fa-trash"></i>
                         </a>
                    </td>
                  </tr>
                     }
                  </tbody>

                </table>
              </div>
              <!-- /.card-body -->
            </div>
            <!-- /.card -->
      </div>
      </div>
      </div>


         <script src="https://code.jquery.com/jquery-3.5.1.js"></script>

 <script src="https://cdn.datatables.net/1.11.1/js/jquery.dataTables.min.js" defer></script>

 <script src="https://cdn.datatables.net/buttons/2.0.0/js/dataTables.buttons.min.js" defer></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>

 <script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdn.datatables.net/buttons/2.0.0/js/buttons.html5.min.js" defer></script>



