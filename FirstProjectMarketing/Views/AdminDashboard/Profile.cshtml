@model FirstProjectMarketing.Models.Firstuser

@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}

<!-- Icons font CSS-->
    <link href="~/assetsCreatePage/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
    <link href="~/assetsCreatePage/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
    <!-- Font special for pages-->
    <link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

    <!-- Vendor CSS-->
    <link href="~/assetsCreatePage/vendor/select2/select2.min.css" rel="stylesheet" media="all">
    <link href="~/assetsCreatePage/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

    <!-- Main CSS-->
    <link href="~/assetsCreatePage/css/main.css" rel="stylesheet" media="all">
    <link href="~/css/site.css" rel="stylesheet"/>
    
    <div class="page-wrapper p-b-100 font-poppins">
        <div class="wrapper wrapper--w680">
            <div class="card card-4">
                <h2 class="card-header" style="text-align:center; background-color:#5350a2ad; margin:-1px; color:whitesmoke">My Profile</h2>
                <div class="card-body">
                    <h2 class="title">My Profile</h2>
                    <form asp-action="Profile" enctype="multipart/form-data">
                        <input type="hidden" asp-for="UserId" />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label" asp-for="Firstname"></label>
                                    <input class="input--style-4" type="text"  asp-for="Firstname" required>
                                    <span asp-validation-for="Firstname" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                   <label class="label" asp-for="Lastname"></label>
                                    <input class="input--style-4" type="text"  asp-for="Lastname" required>
                                    <span asp-validation-for="Lastname" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
   
                        <div class="row row-space">
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label" asp-for="Username"></label>
                                    <input class="input--style-4" type="text"  asp-for="Username" required>
                                    <span asp-validation-for="Username" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="input-group">
                                    <label class="label" asp-for="Phone"></label>
                                    <input class="input--style-4" type="text"  asp-for="Phone" required>
                                    <span asp-validation-for="Phone" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="row row-space">
                            <div class="col-4">
                                <div class="input-group">
                                    <label class="label" asp-for="Country"></label>
                                    <input class="input--style-4" type="text"  asp-for="Country" required>
                                    <span asp-validation-for="Country" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="input-group">
                                    <label class="label" asp-for="City"></label>
                                    <input class="input--style-4" type="text"  asp-for="City" required>
                                    <span asp-validation-for="City" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="input-group">
                                    <label class="label" asp-for="Street"></label>
                                    <input class="input--style-4" type="text"  asp-for="Street" required>
                                    <span asp-validation-for="Street" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                       <div class="input-group">
                            
                            <div class="rs-select2 js-select-simple select--no-search">
                                <img class="rounded-circle" width="150px"  src="~/Images/imgUsers/@Model.Image" alt="No Image Found" />
                                <label style="display: block;margin-left: 95px;margin-top: -30px;">   
                                    <i class="fa fa-2x fa-edit" style="cursor:pointer;color:indigo"></i>
                                <input class="btn--blue rounded-circle" style="display:none" asp-for="imgfile" >
                                    <span asp-validation-for="imgfile" class="text-danger"></span>
                                     </label>
                                     <input class="input--style-4" type="text" style="display:none"  asp-for="Image" >

                            </div>

                            
                        </div>
                        <div class="p-t-15">
                            <input class="btn btn-outline-primary" type="submit" asp-route-id="@Model.UserId" style="border-radius:25px!important"  />
                            </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
        <!-- Jquery JS-->
    <script src="~/assetsCreatePage/vendor/jquery/jquery.min.js"></script>
    <!-- Vendor JS-->
    <script src="~/assetsCreatePage/vendor/select2/select2.min.js"></script>
    <script src="~/assetsCreatePage/vendor/datepicker/moment.min.js"></script>
    <script src="~/assetsCreatePage/vendor/datepicker/daterangepicker.js"></script>
