                     <div class="input-group">
                        <label asp-for="StoreId" class="label">Store Name</label>
                        <select asp-for="StoreId" class ="input--style-4" asp-items="ViewBag.StoreId" required></select>
                        <span asp-validation-for="StoreId" class="text-danger"></span>
                     </div>
                </div>
                </div>
           
             <div class="p-t-15" style="text-align:center">
                <input type="submit" value="Create" class="btn btn-outline-primary col-4" style="border-radius:25px" />
             </div>
             

        </form>
        <div class="p-t-15">
                 <a asp-action="Index" class="btn btn-outline-primary">Back to List</a>
             </div>
                </div>
            </div>
        </div>
        </div>

