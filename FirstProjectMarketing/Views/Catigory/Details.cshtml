@model FirstProjectMarketing.Models.Firstcatigory

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutDashboard.cshtml";
}


<!-- Icons font CSS-->
<link href="~/assetsCreatePage/vendor/mdi-font/css/material-design-iconic-font.min.css" rel="stylesheet" media="all">
<link href="~/assetsCreatePage/vendor/font-awesome-4.7/css/font-awesome.min.css" rel="stylesheet" media="all">
<!-- Font special for pages-->
<link href="https://fonts.googleapis.com/css?family=Poppins:100,100i,200,200i,300,300i,400,400i,500,500i,600,600i,700,700i,800,800i,900,900i" rel="stylesheet">

<!-- Vendor CSS-->
<link href="~/assetsCreatePage/vendor/select2/select2.min.css" rel="stylesheet" media="all">
<link href="~/assetsCreatePage/vendor/datepicker/daterangepicker.css" rel="stylesheet" media="all">

<!-- Main CSS-->
<link href="~/assetsCreatePage/css/main.css" rel="stylesheet" media="all">
<link href="~/css/site.css" rel="stylesheet" />

<div class="page-wrapper p-b-100 font-poppins">
    <div class="wrapper wrapper--w680">
        <div class="card card-4">
            <h2 class="card-header" style="text-align:center; background-color:#5350a2ad; margin:-1px; color:whitesmoke">Catigory Information</h2>
            <div class="card-body">
                <input type="hidden" asp-for="CatigoryId" />
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row row-space">
                    <div class="col-12">
                        <div class="input-group">
                            <label class="label" asp-for="CatigoryName">Name</label>
                            <input class="input--style-4" type="text" asp-for="CatigoryName" readonly="readonly">
                        </div>
                    </div>
                </div>
                <div class="row row-space">
                    <div class="col-12">
                        <div class="input-group">
                            <label class="label" asp-for="Discription">Discription</label>
                            <input class="input--style-4" type="text" asp-for="Discription" readonly="readonly">
                        </div>
                    </div>
                </div>

                <div class="row row-space">
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label" asp-for="Store.StoreName">Store Name</label>
                            <input class="input--style-4" type="text" asp-for="Store.StoreName" readonly="readonly">
                        </div>
                    </div>
                    <div class="col-6">
                        <div class="input-group">
                            <label class="label" asp-for="Store.StoreFloorNumber">Store Floor</label>
                            <input class="input--style-4" type="text" asp-for="Store.StoreFloorNumber" readonly="readonly">
                        </div>
                    </div>
                </div>
                <div class="p-t-15">
                    <a asp-action="Index" type="button" class="btn btn-outline-primary">Back to list</a>
                </div>
            </div>

        </div>
    </div>
</div>


<!-- Jquery JS-->
<script src="~/assetsCreatePage/vendor/jquery/jquery.min.js"></script>
<!-- Vendor JS-->
<script src="~/assetsCreatePage/vendor/select2/select2.min.js"></script>
<script src="~/assetsCreatePage/vendor/datepicker/moment.min.js"></script>
<script src="~/assetsCreatePage/vendor/datepicker/daterangepicker.js"></script>




